<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <layer-list>
                <item>
                    <shape android:shape="rectangle">
                        <solid android:color="#CABBBBBB"/>
                        <corners android:radius="5dp" />
                    </shape>
                </item>

                <item
                    android:left="0dp"
                    android:right="0dp"
                    android:top="0dp"
                    android:bottom="2dp">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/azul_claro"/>
                        <corners android:radius="5dp" />
                    </shape>
                </item>
            </layer-list>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#CABBBBBB"/>
                    <corners android:radius="1dp" />
                </shape>
            </item>

            <item
                android:left="1dp"
                android:right="1dp"
                android:top="3dp"
                android:bottom="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/azul"/>
                    <corners android:radius="1dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>