<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <padding android:bottom="20dp" android:left="20dp"
                        android:right="20dp" android:top="20dp" />
                </shape>
            </item>
            <item >
                <shape android:shape="oval">
                    <solid android:color="#4CAF50"></solid>
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/plus_circle_outline"></bitmap>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item >
                <shape android:shape="oval">
                    <solid android:color="#CDDC39"></solid>
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/plus_circle_outline"></bitmap>
            </item>
        </layer-list>
    </item>
</selector>

