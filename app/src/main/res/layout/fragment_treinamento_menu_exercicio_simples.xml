<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="550dp"
    android:layout_height="200dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="50dp"
    android:layout_gravity="center"
    android:background="@drawable/fragment_exercicio"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_exercicios"
        android:background="@color/amarelo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/lblSeries"
        android:layout_alignParentStart="true"
        android:background="@color/amarelo_alaranjado"
        android:layout_alignEnd="@+id/btnPular"
        android:paddingBottom="10dp">
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lblNomeAluno"
        android:maxLength="20"
        android:text="nome aluno"
        android:layout_above="@+id/lblSeries"
        android:layout_alignParentStart="true"
        android:paddingLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Exercicios"
        android:id="@+id/lblExercicios"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Aparelho"
        android:maxLength="15"
        android:id="@+id/txtAparelho"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_alignTop="@+id/txtSeries1"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Series"
        android:id="@+id/lblSeries"
        android:layout_below="@+id/lblExercicios"
        android:layout_toStartOf="@+id/lblRepeticoes"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Repeticoes"
        android:id="@+id/lblRepeticoes"
        android:layout_below="@+id/lblExercicios"
        android:layout_alignStart="@+id/lblExercicios"
        android:layout_marginStart="48dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Cargas"
        android:id="@+id/lblCargas"
        android:layout_alignTop="@+id/lblRepeticoes"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="51dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="3"
        android:id="@+id/txtSeries1"
        android:paddingTop="10dp"
        android:layout_alignTop="@+id/btnRepeticoes1"
        android:layout_alignStart="@+id/btnAnotacoes" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"


        android:text="00-00-00"
        android:id="@+id/btnRepeticoes1"
        android:background="@drawable/btn_exercicio"
        android:layout_above="@+id/btnAnotacoes"
        android:layout_alignEnd="@+id/lblRepeticoes" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="000-000-000"
        android:id="@+id/btnCargas1"
        android:background="@drawable/btn_exercicio"
        android:layout_alignTop="@+id/btnRepeticoes1"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Fechar"
        android:id="@+id/btnFechar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/btn_padrao"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:text="@string/proximo_grupo"
        android:id="@+id/btnProximo"
        android:layout_alignBottom="@+id/btnFechar"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_padrao"
        android:visibility="gone"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:text="@string/btn_anotacoes"
        android:id="@+id/btnAnotacoes"
        android:layout_alignBottom="@+id/btnFechar"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_padrao"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Proximo"
        android:id="@+id/btnPular"
        android:layout_alignTop="@+id/btnAnotacoes"
        android:layout_alignParentEnd="true"
        android:background="@drawable/btn_padrao"/>

    </RelativeLayout>

</RelativeLayout>