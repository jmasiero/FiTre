<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@android:color/white"
tools:context=".NavigationDrawerFragment" >

<TextView
    android:id="@+id/headerView"
    style="?android:attr/textAppearanceLarge"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:gravity="center_vertical"
    android:padding="25dp"
/>
<TextView
    android:id="@+id/footerView"
    style="?android:attr/textAppearanceMedium"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:gravity="center"
    android:padding="20dp"
    android:text="By MasiDev"
    android:textStyle="bold"
    />

<ListView
    android:id="@+id/navigationItems"
    android:textAppearance="?android:textAppearanceLarge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/footerView"
    android:layout_below="@+id/headerView"
    android:background="@color/vermelho_fitre"
    android:choiceMode="singleChoice"
    android:divider="@android:color/transparent"
    android:dividerHeight="0dp" />


<Button
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/trocarPersonal"
    android:layout_margin="10dp"
    android:text="Trocar Personal"
    android:padding="5dp"
    android:layout_above="@+id/footerView"
    android:layout_alignParentStart="true"
    android:textAppearance="?android:textAppearanceLarge"
    android:background="@drawable/btn_exercicio"
    android:drawableRight="@drawable/account_switch"
    />

</RelativeLayout>
