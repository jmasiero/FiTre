<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="10dp"
        android:gravity="center"
        android:background="@drawable/card_view_padrao">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgObservacao"
            android:src="@drawable/information"
            android:visibility="gone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lblNomeAluno"
            android:text="Nome do Aluno"
            android:maxLength="15"
            android:textSize="20dp"
            android:textColor="@color/primary_text"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/validadeTreino"
            android:textSize="20dp"
            android:visibility="visible"
            android:textColor="@color/vermelho"
            android:layout_marginRight="10dp"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_alignBottom="@+id/textViewItem"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/txtTempoDecorrido"
            android:textSize="20dp"
            android:textColor="@color/primary_text"
            android:text="Tempo: 15:44"
            android:visibility="gone"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>