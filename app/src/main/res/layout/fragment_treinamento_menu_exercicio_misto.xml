<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="550dp"
    android:layout_height="300dp"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="50dp"
    android:layout_gravity="center"
    android:background="@drawable/fragment_exercicio"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_exercicios"
        android:background="@color/amarelo">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/lblSeries"
            android:layout_alignParentStart="true"
            android:background="@color/amarelo_alaranjado"
            android:layout_alignEnd="@+id/btnPular"
            android:id="@+id/relativeLayout">
        </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/lblNomeAluno"
        android:maxLength="20"
        android:layout_above="@+id/lblSeries"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Exercicios"
        android:id="@+id/lblExercicios"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Aparelho1"
        android:maxLength="15"
        android:id="@+id/txtAparelho1"
        android:paddingBottom="100dp"
        android:paddingLeft="10dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Series"
        android:id="@+id/lblSeries"
        android:layout_below="@+id/lblExercicios"
        android:layout_toStartOf="@+id/lblRepeticoes" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Repeticoes"
        android:id="@+id/lblRepeticoes"
        android:layout_below="@+id/lblExercicios"
        android:layout_alignStart="@+id/lblExercicios"
        android:layout_marginStart="48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Cargas"
        android:id="@+id/lblCargas"
        android:layout_alignTop="@+id/lblRepeticoes"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="51dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1"
        android:id="@+id/txtSeries1"
        android:layout_alignTop="@+id/txtAparelho1"
        android:layout_alignEnd="@+id/lblSeries" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Fechar"
        android:id="@+id/btnFechar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/btn_padrao"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/proximo_grupo"
        android:id="@+id/btnProximo"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_alignBottom="@+id/btnFechar"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_padrao"
        android:visibility="gone"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_anotacoes"
        android:id="@+id/btnAnotacoes"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_alignBottom="@+id/btnFechar"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_padrao"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Proximo"
        android:id="@+id/btnPular"
        android:layout_alignTop="@+id/btnAnotacoes"
        android:layout_alignParentEnd="true"
        android:background="@drawable/btn_padrao"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="11-08-20"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/btnRepeticoes1"
        android:background="@drawable/btn_exercicio"
        android:layout_alignTop="@+id/txtSeries1"
        android:layout_alignEnd="@+id/lblRepeticoes" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="390-042-030"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/btnCargas1"
        android:background="@drawable/btn_exercicio"
        android:layout_alignTop="@+id/btnRepeticoes1"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Aparelho2"
        android:id="@+id/txtAparelho2"
        android:maxLength="15"
        android:paddingLeft="10dp"
        android:layout_alignBottom="@+id/txtAparelho1"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1"
        android:id="@+id/txtSeries2"
        android:layout_alignTop="@+id/txtAparelho2"
        android:layout_alignEnd="@+id/lblSeries" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="11-80-20"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/btnRepeticoes2"
        android:layout_alignBottom="@+id/txtSeries2"
        android:layout_alignStart="@+id/btnRepeticoes1"
        android:background="@drawable/btn_exercicio"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="200-015-010"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:id="@+id/btnCargas2"
        android:background="@drawable/btn_exercicio"
        android:layout_alignBottom="@+id/btnRepeticoes2"
        android:layout_alignParentEnd="true" />


    </RelativeLayout>

</RelativeLayout>